{% render 'banner_slider' %}
{% schema %}
{
  "name": "Banner Slider",
  "settings": [
    {
      "type": "number",
      "id": "timer",
      "label": "Countdown Timer"
    },
    {
      "type": "range",
      "id": "start_minute",
      "label": "Minute",
        "min": 0,
        "max": 60,
        "step": 1,
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Banner Slider",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Select Background Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Banner Link"
        }
      ]
    },
    {
      "type": "banner_video",
      "name": "Banner Video",
      "limit": 2,
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Video Link"
        }
      ]
    }
  ]
}
{% endschema %}
