{% render 'banner_slider' %}
{% schema %}
{
  "name": "Banner Slider",
  "settings": [
    {
      "type": "text",
      "id": "timer",
      "label": "Countdown Timer"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Banner Slider",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Select Background Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Banner Link"
        }
      ]
    },
    {
      "type": "banner_video",
      "name": "Banner Video",
      "limit": 2,
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Video Link"
        }
      ]
    }
  ]
}
{% endschema %}
