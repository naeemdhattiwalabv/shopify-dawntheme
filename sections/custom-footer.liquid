<div style="">
  <ul>
    {% for linklist in linklists %}
      {% if linklist.handle != 'main-menu' and linklist.handle != 'footer' %}
        {{ linklist.handle }}
      {% endif %}
    {% endfor %}
    <h1 style="color:white">{{ linklists.blogs.title }}</h1>
    {% for link in linklists.blogs.links %}
      <li>
        <a href="{{ link.url }}">{{ link.title }}</a>
      </li>
    {% endfor -%}
    #002941
  </ul>
  <ul>
    <h1>{{ linklists.company.title }}</h1>
    {% for link in linklists.company.links %}
      <li>
        <a href="{{ link.url }}">{{ link.title }}</a>
      </li>
    {% endfor %}
  </ul>
  <ul>
    <h1>{{ linklists.product.title }}</h1>
    {% for link in linklists.product.links %}
      <li>
        <a href="{{ link.url }}">{{ link.title }}</a>
      </li>
    {% endfor %}
  </ul>
  {% if section.settings.footer_logo != blank %}
    {{ section.settings.footer_logo | image_url: width: 300 | image_tag }}
  {% endif %}
</div>
{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    }
  ]
}
{% endschema %}
