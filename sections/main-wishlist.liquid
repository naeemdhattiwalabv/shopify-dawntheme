{% stylesheet %}
.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  max-width: 300px;
  margin: auto;
  text-align: center;
  font-family: arial;
}

.price {
  color: grey;
  font-size: 22px;
}

.card button {
  border: none;
  outline: 0;
  padding: 12px;
  color: white;
  background-color: #000;
  text-align: center;
  cursor: pointer;
  width: 100%;
  font-size: 18px;
}

.card button:hover {
  opacity: 0.7;
}
{% endstylesheet %}

<div class="collection-grid" id="product_collection"></div>

{% javascript %}
    var wishlist_productData = [];
    wishlist_productData = JSON.parse(localStorage.getItem('wishlist_product'));
    var proHandle = wishlist_productData.map((item) => item.proHandle);
    var qty = wishlist_productData.map((item) => item.addedQty);
    for (let index = 0; index < proHandle.length; index++) {
        fetch(`/products/${proHandle[index]}.js`)
        .then((response) => response.json())
        .then((product) => {
            document.getElementById("product_collection")
                .innerHTML +=
                `<div class="card">
                    <a href="`+product.url+`">
                        <img id="product-image" src="`+product.images[0]+`" alt="Product Image">
                    </a>
                    <h1>`+product.title+`</h1>
                    <p class="price">`+product.price+`</p>
                    <p>`+qty[index]+`</p>
                    <p><button>Remove</button></p>
                </div>`;
        })
        .catch((error) => {
        console.error('Error fetching product data:', error);
        });
    }
{% endjavascript %}
