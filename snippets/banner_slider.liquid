{{ 'custom_banner.css' | asset_url | stylesheet_tag }}
<div class="slideshow-container">
  {% for banner in section.blocks %}
    {% if banner.settings.image != blank %}
      {% if banner.settings.link != blank %}
        <a href="{{ banner.settings.link }}">
      {% endif %}
      {{ banner.settings.image | image_url: width: 1000 | image_tag: class: 'mySlides' }}
      {% if banner.settings.link != blank %}
        </a>
      {% endif %}
    {% endif %}
    {% if banner.settings.video.media_type == 'video' %}
      <video
        playsinline="playsinline"
        class="mySlides"
        preload="metadata"
        poster="//brainvire-naeem-dev.myshopify.com/cdn/shop/files/preview_images/4fa724adb8ac454aab3502ec05e925ab.thumbnail.0000000000_400x.jpg?v=1716198734"
        style="display: block;"
      >
        <source
          src="{{ banner.settings.video }}"
          type="video/mp4"
        >
      </video>
    {% endif %}
  {% endfor %}
  <button class="w3-button w3-black w3-display-left" onclick="plusDivs(-1)">&#10094;</button>
  <button class="w3-button w3-black w3-display-right" onclick="plusDivs(1)">&#10095;</button>
</div>

<script>
  var slideIndex = 1;
  showDivs(slideIndex);

  function plusDivs(n) {
    showDivs(slideIndex += n);
  }

  function showDivs(n) {
    var i;
    var x = document.getElementsByClassName("mySlides");
    if (n > x.length) {slideIndex = 1}
    if (n < 1) {slideIndex = x.length}
    for (i = 0; i < x.length; i++) {
      x[i].style.display = "none";
    }
    x[slideIndex-1].style.display = "block";
  }
</script>
