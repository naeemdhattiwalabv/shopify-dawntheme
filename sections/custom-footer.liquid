<div style="">
  <ul>
    {% for linklist in linklists %}
      {% if linklist.handle == "blogs" and linklist.handle == "company" and linklist.handle == "products" %}
        {% assign menu_handle_name = linklist.handle %}
        <h1 style="color:black">{{ linklists.blogs.title }}</h1>
        {% for link in linklists.blogs.links %}
          <li>
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {% endfor -%}
      {% endif %}
    {% endfor %}
  </ul>
  {% if section.settings.footer_logo != blank %}
    {{ section.settings.footer_logo | image_url: width: 300 | image_tag }}
  {% endif %}
</div>
{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    }
  ]
}
{% endschema %}
