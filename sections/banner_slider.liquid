{% render 'banner_slider' %}
{% schema %}
{
  "name": "Banner Slider",
  "blocks": [
  {
    "type": "slide",
    "name": "Banner Slider",
    "limit": 3,
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Select Background Image"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Banner Link"
      }
    ]
  },
  {
    "type": "Video",
    "name": "Banner Video",
    "limit": 2,
    "settings": [
      {
        "type": "text",
        "id": "video",
        "label": "Video Link"
      }
    ]
  }
]
}
{% endschema %}
