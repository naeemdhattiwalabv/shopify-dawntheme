{% render 'banner_slider' %}
{% schema %}
{
  "name": "Banner Slider",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    },
    {
      "type": "richtext",
      "id": "maintitle",
      "label": "Title"
    }
  ],
  "blocks": [
  {
    "type": "slide",
    "name": "Banner Slider",
    "limit": 3,
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Select Background Image"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Banner Link"
      }
    ]
  },
  {
    "type": "banner_video",
    "name": "Banner Video",
    "limit": 2,
    "settings": [
      {
        "type": "video",
        "id": "video",
        "label": "Video Link"
      }
    ]
  }
]
}
{% endschema %}
